<Page x:Class="Proect.Pagge.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proect.Pagge"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.RowSpan="7" Grid.Column="1" Grid.ColumnSpan="2"  >
            <Grid.RowDefinitions>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="Auto"/>
                <RowDefinition  Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Label  Content="Авторизация" Grid.Row="0" Width="232" FontSize="36" />
            <Label  Content="Логин" HorizontalAlignment="Left" VerticalAlignment="Center" Width="118" FontSize="30" />
            <TextBox x:Name="TBLogin" TextWrapping="Wrap" Width="336" Height="40"  HorizontalAlignment="Center"/>
           
                <Button x:Name="LoginBtn" Grid.Row="6" Click="LoginBtn_Click" Content="Вход"   HorizontalAlignment="Center" Width="206" Margin="10"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Page>
